---
import MainLayout from '../layouts/MainLayout.astro';
import HeroSection from "../components/sections/HeroSection.astro";
import FeaturesSection from "../components/sections/FeaturesSection.astro";
import BenefitsSection from "../components/sections/BenefitsSection.astro";
import DevicesSection from "../components/sections/DevicesSection.astro";
import TestimonialsSection from "../components/sections/TestimonialsSection.astro";
import PricingSection from "../components/sections/PricingSection.astro";
import TeamSection from "../components/sections/TeamSection.astro";
import ContactSection from "../components/sections/ContactSection.astro";
import AboutTeam from '@/components/sections/AboutTeam.astro';
---

<MainLayout
	title="Smart Suite"
	description="Smart Suite - Better Management For Your Hotel Business"
	keywords="hotel management, suite management, room management, staff coordination"
>
  <HeroSection data-aos="fade-up" data-aos-delay="200" />
  <FeaturesSection data-aos="fade-up" data-aos-delay="300" />
  <BenefitsSection data-aos="fade-up" data-aos-delay="400" />
  <DevicesSection data-aos="fade-up" data-aos-delay="500" />
  <TestimonialsSection data-aos="fade-up" data-aos-delay="600" />
  <PricingSection data-aos="fade-up" data-aos-delay="700" />
  <TeamSection data-aos="fade-up" data-aos-delay="800" />
  <AboutTeam data-aos="fade-up" data-aos-delay="800" />
  <ContactSection data-aos="fade-up" data-aos-delay="900" />
</MainLayout>
